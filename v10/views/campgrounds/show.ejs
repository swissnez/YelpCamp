<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp! :)</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%=campground.image %>">
                <div class="caption-full">
                    <h4 class="pull-right">$9.00/night</h4>
                    <h4><a><%=campground.name%></a></h4>
                    <p> <%= campground.descriptions %></p>
                    <p>
                        <em><b>By </b><%= campground.author.username %></em>
                    </p>
                     <% if(currentUser && campground.author.id.equals(currentUser._id)) { %>
                        <a class="btn btn-xs btn-warning" href="/campgrounds/<%=campground._id%>/edit">Edit</a>
                        <form action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST" id="deleteForm">
                           <button class="btn btn-xs btn-danger">DELETE!</button> 
                        </form>
                    <% } %>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/campgrounds/<%=campground._id%>/comments/new">Add new Comment</a>
                </div>
                <hr>
                <% campground.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                           <strong><%= comment.author.username %></strong> 
                            <span class="pull-right"> 10 days ago</span>
                            <p>
                                <%= comment.text %>
                            </p>
                            <% if(currentUser && comment.author.id.equals(currentUser._id)) { %>
                                <a href="/campgrounds/<%=campground._id %>/comments/<%=comment._id%>/edit"
                                    class="btn btn-xs btn-warning">Edit</a>
                                <form action="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>?_method=DELETE" Method="POST" id="deleteForm">
                                   <input type="submit" class="btn btn-xs btn-danger" value="Delete">  
                               </form>
                            <% } %>  
                        </div>
                    </div>
                <% })%>
        
            </div>
        </div>
    </div>
</div>


<div class="">
    
</div>

  
<% include ../partials/footer %>